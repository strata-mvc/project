{
    "name": "strata/strata-env",
    "type": "project",
    "license": "MIT",
    "description": "Blank Strata Template",
    "homepage": "https://strata.francoisfaubert.com",
    "authors": [
        {
            "name": "Francois Faubert",
            "email": "frank@francoisfaubert.com",
            "homepage": "http://www.francoisfaubert.com"
        }
    ],
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "stable",
    "repositories": [{
            "type": "composer",
            "url": "http://wpackagist.org"
        }
    ],
    "require": {
        "php": ">=5.4",
        "johnpbloch/wordpress": "4.2.4",
        "francoisfaubert/strata": "dev-master",
        "composer/installers": "~1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.7.*"
    },
    "extra": {
        "installer-paths": {
            "web/app/mu-plugins/{$name}/": ["type:wordpress-muplugin"],
            "web/app/plugins/{$name}/": ["type:wordpress-plugin"],
            "web/app/themes/{$name}/": ["type:wordpress-theme"]
        },
        "wordpress-install-dir": "web/wp"
    }
}
